    "scripts": {
        "infrastructure:npm": "cd ./infrastructure && npm",
        "infrastructure:cdk": "cd ./infrastructure && cdk",
        "infrastructure:install": "cd ./infrastructure && npm install",
        "infrastructure:build": "cd ./infrastructure && npm run build",

        "server:npm": "cd ./server && npm",
